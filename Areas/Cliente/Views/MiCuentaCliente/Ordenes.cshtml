@model List<Proyecto_final_pro_3.Models.Pedidos>

@{ 
    ViewData["title"] = "Historial del cliente";

    if (ViewBag.userID != null)
    {
        Layout = "~/Views/Shared/_LayoutLogged.cshtml";

    }

}

    <div>
        <h2 class="text-center mt-4" style="color: #FD5924;">MIS ÓRDENES</h2>

        <div class="col-10 mt-4 mx-auto px-0">
            <table class="table table-responsive" style="margin-left: 16%">
                <thead class="thead-light">
                    <tr>
                        <th style="color: #FD5924;">Fecha</th>
                        <th style="color: #FD5924;">Latitud y Longitud</th>
                        <th style="color: #FD5924;">Estado</th>
                        <th style="color: #FD5924;">Monto </th>
                        <th style="color: #FD5924;">Opciones</th>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var pedidos in Model) 
                    {
                        <tr>
                            <td>@pedidos.Fecha</td>
                            <td>@pedidos.latlong</td>
                            <td>@pedidos.Estado</td>
                            <td>@pedidos.Monto</td>
                            <td>
                                <a asp-route-id="@pedidos.Id" asp-controller="MiCuentaCliente" asp-action="DetailsOrden"  class="col-10 text-center padre pl-4 btn" style="background-color: #FD5924; height:30px; width:150px;">
                                    <p class="m-0 d-inline-block text-white">Detalles</p>
                                    <ion-icon class="ml-2 d-inline-block icono text-white" name="eye-outline"></ion-icon>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            @*<a asp-route-id="@usuario.IdUsuario" asp-controller="UsuariosAdmin" asp-action="Details" asp-area="Admin" class="col-10 text-center padre pl-4 btn" style="background-color: #FD5924; height:30px; width:150px;">
                <p class="m-0 d-inline-block text-white">Detalles</p>
                <ion-icon class="ml-2 d-inline-block icono text-white" name="eye-outline"></ion-icon>
            </a>*@
        </div>
    </div>