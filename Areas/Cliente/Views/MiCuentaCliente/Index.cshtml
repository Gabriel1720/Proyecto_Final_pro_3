@{
    if (ViewBag.userID != null)
    {
        Layout = "~/Views/Shared/_LayoutLogged.cshtml";

    }
}
@model Proyecto_final_pro_3.Models.Usuario;

<h3 class="mt-4 mb-3 text-center" style="color: #FF561F;">MI CUENTA</h3>
<form method="post" class="border border-secondary rounded mx-auto text-center p-4 registro" style="height: 58%;">


    <div class="col-11 col-sm-11 col-md-11 mx-auto mt-2 mb-2">
        <label for="Nombre" style="margin-right: 35%;">Nombre</label>
        <input id="nombre" class="form-control text-center" type="text" name="nombre" value="@Model.Nombre" style="background-color: rgba(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">

    </div>
    <div class="col-11  mx-auto mt-2 mb-2">
        <label class="mt-3" for="Apellido" style="margin-right: 35%;">Apellido</label>
        <input id="Apellido" class="form-control text-center" type="text" name="apellido" value="@Model.Apellido" style="background-color: rgba(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">
    </div>
    <div class="col-11 mx-auto mt-2 mb-2">
        <label class="mt-3" for="FechaNacimiento" style="margin-right: 18%;">Fecha de Nacimiento</label>
        <input id="FechaNacimiento" class="form-control text-center" type="text" name="correo" value="@Model.FechaNacimiento" style="background-color: rgb(246, 246, 246); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;" readonly>
    </div>
    <div class="col-11 mx-auto mt-2 mb-4">
        <label class="mt-3" for="Correo" style="margin-right: 20%;">Correo Electrónico</label>
        <input id="correo" class="form-control text-center" type="email" name="correoelectronico" value="@Model.Correo" style="background-color: rgb(246, 246, 246); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;" readonly>
    </div>
    <input type="hidden" name="idUser" value="@Model.IdUsuario"/>
    <div class="col-4 col-sm-7 col-md-5 mx-auto mt-4">
        <input type="submit" asp-controller="MiCuentaCliente" asp-action="Edit" class="btn btn-block input-round text-white" style="background-color: #FD5924;">
    </div>

</form>

