<div>
    <h2 class="text-center mt-4" style="color: #FD5924;">LISTADO DE CUMPLEAÑOS POR MES</h2>

    <div class="col-5 mx-auto">
        <!-- <span class="d-inline-block mr-0 mt-4">
         <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" class="text-center padre btn" style="background-color: #FD5924; height:35px; width:100px;">
             <p class="m-0 d-inline-block text-white">Mes</p>
             <ion-icon class="ml-2 d-inline-block icono text-white" name="caret-down"></ion-icon>
         </a>
     </span> -->
        <form method="post">
            <select name="mes" class="select text-center">
                <option value="0">Mes</option>
                <option value="1">1-Enero</option>
                <option value="2">2-Febreo</option>
                <option value="3">3-Marzo</option>
                <option value="4">4-Abril</option>
                <option value="5">5-Mayo</option>
            </select>
            <input class="btn btn-primary" type="submit" asp-controller="Utilidades" asp-action="IndexMes" value="Buscar" />
        </form>

        @if (ViewBag.error != null)
        {
            <span class="text-danger">@ViewBag.error</span>
        }

    </div>

    <div class="col-10 mt-4 mx-auto">
        <table class="table table-md-responsive">
            <thead class="thead-light">
                <tr>
                    <th style="color: #FD5924;">Nombre</th>
                    <th style="color: #FD5924;">Apellido</th>
                    <th style="color: #FD5924;">Fecha de nacimiento</th>
                    <th style="color: #FD5924;">Email</th>
                    <th>
                        <a asp-controller="Utilidades" asp-action="ReadCsv" class="col-10 text-center padre pl-4 btn" style="background-color: #297E0B; height:30px; width:150px;">
                            <p class="m-0 d-inline-block text-white">Exportar a CSV</p>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Usuario usuario in ViewBag.Usuario)
                    {
                        <tr>
                            <th scope="row">@usuario.Nombre</th>
                            <td>@usuario.Apellido</td>
                            <td>@usuario.FechaNacimiento</td>
                            <td>@usuario.Correo</td>
                            <td>
                                <a asp-route-id="@usuario.IdUsuario" class="col-10 text-center padre pl-4 btn" style="background-color: #FD5924; height:30px; width:130px;">
                                    <p class="m-0 d-inline-block text-white">Detalles</p>
                                    <ion-icon class="ml-2 d-inline-block icono text-white" name="eye-outline"></ion-icon>
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>

        <nav aria-label="Page navigation example" class="col-4 mx-auto">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#!" aria-label="Previous">
                        <span aria-hidden="true">«</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#!">1</a></li>
                <li class="page-item"><a class="page-link" href="#!">2</a></li>
                <li class="page-item"><a class="page-link" href="#!">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#!" aria-label="Next">
                        <span aria-hidden="true">»</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>


    </div>
