@model Proyecto_final_pro_3.Models.Producto
    <div>
        <h3 class="mt-3 text-center" style="color: #FF561F;">NUEVO PRODUCTO</h3>
        @*<h5 class="text-center" style="color: #FF561F; margin-right: 39%;">Agregar produco</h5>*@
    </div>
    <div style=" margin-top:125px">
        <form asp-action="Create" method="post">
            <div class="text-center">
                <div>
                    <label asp-for="Nombre" style="margin-right: 44%;">Nombre</label>
                    <input asp-for="Nombre"  class="form-control" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Descripcion" class="mt-3" for="Apellido" style="margin-right: 44%;">Apellido</label>
                    <input asp-for="Descripcion"  class="form-control" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Precio" class="mt-3" for="Correo" style="margin-right: 45%;">Correo</label>
                    <input asp-for="Precio" class="form-control"  style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="IdCategoria" class="mt-3" for="Correo" style="margin-right: 45%;">Correo</label>
                    <select  asp-for="IdCategoria" class="form-control" asp-items="ViewBag.CategoriaNombre" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;"></select>
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Foto" class="mt-3" for="Apellido" style="margin-right: 44%;">Apellido</label>
                    <input asp-for="Foto"  class="form-control" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <br>
                <div class="mt-4 ">
                    <input type="submit" value="AGREGAR" class="btn mr-3" style="width: 23%; background: #FD5924; color: #fff;">

                </div>
            </div>
        </form>
    </div>