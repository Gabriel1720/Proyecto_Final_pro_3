
@model ReflectionIT.Mvc.Paging.PagingList<Producto>




<h2 class="text-center mt-4" style="color: #FD5924;">GESTIÓN DE PRODUCTOS</h2>
<div class="boton box-shadow text-center" style="margin-left: 7%">
    <a asp-controller="GestionProductos" asp-action="Create" class="text-center">+</a>
</div>
<form asp-action="Index" method="get">
    <div class="col-9 col-lg-6 mt-4 d-flex py-2 py-md-0 padre mx-auto bg-light pr-0">
        <ion-icon name="search-outline" class="ml-5 icono"></ion-icon>
        <input name="valor" value="@ViewBag.ValueSearch" placeholder="Categoria o Nombre del producto" type="text" class="fi w-100 ml-2 border-0 rounded-0 bg-light">
        <input type="submit" value="Buscar" class="btn" style="color:#fff; background:#FF561F" />
    </div>
</form>

<table class="table table-hover  table-responsive-sm" style="margin-top:35px; margin-left:20px; margin-right:20px;">

    <thead>
        <tr>
            <th>
                <span style="color:#FF561F; font-size:18px;">Categoria</span>
            </th>
            <th>
                <span style="color:#FF561F; font-size:18px;">Nombre del Producto</span>
            </th>
            <th>
                <span style="color:#FF561F; font-size:18px;">Stock</span>
            </th>
            <th>
                <span style="color:#FF561F; font-size:18px;">Precio</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ItemProducto in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => ItemProducto.IdCategoriaNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => ItemProducto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(model => ItemProducto.Stock)
                </td>
                <td>
                    RD$ @Html.DisplayFor(model => ItemProducto.Precio)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@ItemProducto.IdProducto" class="btn text-white bg-orange"><ion-icon name="eye"></ion-icon></a>
                    <a asp-action="Edit" asp-route-id="@ItemProducto.IdProducto" class="btn btn-info"><ion-icon name="pencil"></ion-icon></a>
                    <a asp-action="Delete" asp-route-id="@ItemProducto.IdProducto" class="btn btn-danger"><ion-icon name="trash"></ion-icon></a>
                </td>
            </tr>
        }

    </tbody>

</table>

<nav aria-label="Employee paging" class="" style="width:150px; margin: 0 auto;">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>