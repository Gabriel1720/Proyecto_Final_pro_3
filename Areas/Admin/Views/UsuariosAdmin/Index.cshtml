@{ Layout = "~/Views/Shared/_Layout_administrador.cshtml"; }
<div>
    <h2 class="text-center mt-4" style="color: #FD5924;">ADMINISTRADORES</h2>
    <div class="boton box-shadow">
        <a asp-controller="UsuariosAdmin" asp-action="Create">+</a>

    </div>
    <div class="col-9 col-lg-6 mt-4 d-flex py-2 py-md-0 padre mx-auto bg-light pr-0">
        <ion-icon name="search-outline" class="ml-5 icono"></ion-icon>
        <input type="text" placeholder="Nombre o Correo" class="fi w-100 ml-2 border-0 rounded-0 bg-light">
        <a class="btn bg-orange">Buscar</a>
    </div>

    <div class="col-10 mt-4 mx-auto">
        <table class="table table-responsive">
            <thead class="thead-light">
                <tr>
                    <th style="color: #FD5924;">Nombre</th>
                    <th style="color: #FD5924;">Apellido</th>
                    <th style="color: #FD5924;">Correo/Email</th>
                    <th style="color: #FD5924;">Opciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Proyecto_final_pro_3.Models.Usuario usuario in ViewBag.Usuario)
                {
                    <tr>

                        <td scope="col">@usuario.Nombre</td>
                        <td scope="col">@usuario.Apellido</td>
                        <td scope="col">@usuario.Correo</td>
                        <td>
                            <a asp-route-id="@usuario.IdUsuario" asp-controller="UsuariosAdmin" asp-action="Details" asp-area="Admin" class="col-10 text-center padre pl-4 btn" style="background-color: #FD5924; height:30px; width:130px;">
                                <p href="#" class="m-0 d-inline-block text-white">Detalles</p>
                                <ion-icon class="ml-2 d-inline-block icono text-white" name="eye-outline"></ion-icon>

                            </a>
                        </td>


                    </tr>
}
            </tbody>
        </table>

        <nav aria-label="Page navigation example" class="col-4 mx-auto">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#!" aria-label="Previous">
                        <span aria-hidden="true">«</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#!">1</a></li>
                <li class="page-item"><a class="page-link" href="#!">2</a></li>
                <li class="page-item"><a class="page-link" href="#!">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#!" aria-label="Next">
                        <span aria-hidden="true">»</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>

    </div>
</div>


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="https://unpkg.com/ionicons@5.1.2/dist/ionicon"></script>