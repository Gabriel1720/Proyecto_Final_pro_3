@model Proyecto_final_pro_3.Models.Usuario;


        <!-- Segundo div, div cuenta -->

        <h3 class="mt-5 mb-3 text-center" style="color: #FF561F;">MI CUENTA</h3>
        <div class="border border-secondary rounded mx-auto text-center p-4 registro" style="height: 58%;">

            <div class="text-center">
                <div class="rounded-circle" style="background-color: #FD5924; margin: auto; color: #fff; font-size: 30px; width: 50px; height: 50px;">
                <p>A</p>
                </div>
                <p class="mt-1 mb-4 text-center" style="font-size: 12px"> ADMINISTRADOR</p>
                <form method="post">
                    <label for="Nombre" style="margin-right: 35%;">Nombre</label>
                    <input asp-for="Nombre" id="nombre" class="form-control text-center" type="text" name="nombre" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">

                    <label class="mt-3" for="Apellido" style="margin-right: 35%;">Apellido</label>
                    <input asp-for="Apellido" id="Apellido" class="form-control text-center" type="text" name="apellido" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">

                    <label class="mt-3" for="Correo" style="margin-right: 20%;">Correo Electrónico</label>
                    <input asp-for="Correo" id="Correo" class="form-control text-center" type="email" readonly name="correo" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 25%;">
                    <br>
                    <input type="hidden" asp-for="IdRol" />
                    <input type="hidden" asp-for="FechaNacimiento" />
                    <input type="hidden" asp-for="Password" />
                    <input type="hidden" asp-for="IdUsuario" />

                    <div class="mt-3 mb-2">
                        <button asp-controller="PerfilAdmin" asp-action="Edit" type="submit" class="btn mr-3" style="width: 23%; background: #FD5924; color: #fff;">Guardar</button>
                        <button asp-controller="PerfilAdmin" asp-action="CambiarContrasena" type="submit" class="btn" style="width: 35%; background: #FD5924; color: #fff;">Cambiar Contraseña</button>
                    </div>
                </form>

            </div>

        </div>
        