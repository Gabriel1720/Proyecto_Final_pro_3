@{ Layout = "~/Views/Shared/_Layout_administrador.cshtml"; }

@model  Orden

<div class="overflow-auto">
    <h3 class="text-center mt-4" style="color: #FD5924;">GESTIONAR PEDIDO</h3>

    <form asp-action="Manage" asp-controller="GestionPedidos" method="post" style="height:500px;">
        <input type="hidden" asp-for="IdOrden" />
        <div class="mx-auto mt-4 col-md-8  text-center shadow-sm" style="border:1px solid #d3cdcd ;">

            <div class="text-center">
                <div class="mt-4">
                    <label asp-for="IdUsuarioNavigation.Nombre" style="margin-right: 44%;"></label>
                    <input asp-for="IdUsuarioNavigation.Nombre" class="form-control text-center" readonly style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 22%;">
                    <span asp-validation-for="IdUsuarioNavigation.Nombre" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="IdUsuarioNavigation.Correo" class="mt-3" style="margin-right: 40%;"></label>
                    <input asp-for="IdUsuarioNavigation.Correo" class="form-control text-center" readonly style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 22%;">
                    <span asp-validation-for="IdUsuarioNavigation.Correo" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Fecha" class="mt-3" style="margin-right: 46%;"></label>
                    <input asp-for="Fecha" class="form-control text-center" readonly style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 22%;">
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="IdDomicilioNavigation.Latitud" class="mt-3" style="margin-right: 46%;"></label>
                    <input asp-for="IdDomicilioNavigation.Latitud" class="form-control text-center" readonly style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 22%;">
                    <span asp-validation-for="IdDomicilioNavigation.Latitud" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="IdDomicilioNavigation.Longitud" class="mt-3" style="margin-right: 46%;"></label>
                    <input asp-for="IdDomicilioNavigation.Longitud" class="form-control text-center" readonly style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 22%;">
                    <span asp-validation-for="IdDomicilioNavigation.Longitud" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="IdStatusOrden" class="mt-3" style="margin-right: 42%;">Status</label>
                    <select asp-for="IdStatusOrden" class="form-control text-center" asp-items="@ViewBag.Status" style="background-color: rgb(255, 114, 68, 0.1); border: none; border-radius: 50px; width: 50%; color: #323232; margin-left: 22%;"></select>
                    <span asp-validation-for="IdStatusOrden" class="text-danger"></span>
                </div>
                <br>
                <div class="mt-2 mb-4">
                    <input type="submit" value="GUARDAR" class="btn mr-3" style="width: 23%; background: #FD5924; color: #fff;">
                </div>
            </div>
            </div>
    </form>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

