@model Proyecto_final_pro_3.Models.Usuario
@{
    Layout = "~/Views/Shared/_Layout_top_menu_bar.cshtml";
}



@using (Html.BeginForm("Registrarse", "Cuenta", FormMethod.Post))
{
    <div class="w-75 mx-auto text-center mt-3 p-2 registro">
        <h2>Registrarse</h2>
        <div class="col-12 col-sm-9 mx-auto mt-4 mb-3">
            @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control input-round", @placeholder = "Nombre" })
        </div>
        <div class="col-12 col-sm-9 mx-auto mt-2 mb-3">
            @Html.TextBoxFor(d => d.Apellido, "", new { @class = "form-control input-round", @placeholder = "Apellido" })
        </div>
        <div class="col-12 col-sm-9 mx-auto mt-2 mb-3">
            @Html.TextBoxFor(d => d.FechaNacimiento, "", new { @class = "form-control input-round", @type = "date" })
        </div>
        <div class="col-12 col-sm-9 mx-auto mt-2 mb-3">
            @Html.TextBoxFor(d => d.Correo, "", new { @class = "form-control input-round", @placeholder = "Correo Electronico" })
        </div>
        <div class="col-12 col-sm-9 mx-auto mt-2 mb-3">
            @Html.TextBoxFor(d => d.Password, "", new { @class = "form-control input-round", Type="password", @placeholder = "Contraseña" })
        </div>
        <div class="col-12 col-sm-9 mx-auto mt-4 mb-3">
            <input type="password" placeholder="Repita contraseña" name="repPass" class="form-control input-round">
        </div>
        <div class="col-12 col-sm-4 mx-auto mt-2">
            <input type="submit" value="Registrarse" class="btn btn-block w-75 mx-auto rounded-lg text-white" style="background-color: #FD5924;">
        </div>
    </div>
}