
@{
    ViewData["Title"] = "Ofertas";

    if (ViewBag.userID != null)
    {
        Layout = "~/Views/Shared/_LayoutLogged.cshtml";

    }

}

<div class="container-fluid p-4">
    <div class="row my-4">
        <div class="col-md-2 col-lg-2 d-sm-none d-md-none d-lg-block dis-none-on-small">
            <h4 class="text-center" style="color:#FD5924">CATEGORIAS</h4>
            <ul class="py-4  bg-light px-2" style="list-style:none;">
                @foreach (Categoria categoria in ViewBag.Categorias)
                {
                    <li><a class="m-2" asp-route-id="@categoria.IdCategoria" asp-controller="Home" asp-action="Categorias">@categoria.Nombre</a></li>
                }               
            </ul>
        </div>
        <div class="col-sm-12 col-md-10 p-0 mx-sm-auto mr-0" style="clear:both;">
            <div class="row mb-4  m-0 p-0">
                <div class="col-11 p-0 m-0">
                    <h2 class="text-uppercase">@ViewBag.categoria</h2>
                    <hr style="border-width: 1px; border-color:#FD5924;" />

                    <p class="float-right"> <img src="~/iconos/etiqueta.png" width="24" /> @ViewBag.cantidad Articulos </p>

                </div>
            </div>
            <div class="row mx-0">


                @foreach (Ofertas ofertas in ViewBag.productos)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="px-sm-4 pt-2" style="height: 350px;width:220px ;">
                            <div style="height: 45%;">
                                <img src="@ofertas.IdProductoNavigation.Foto" class="img-fluid img-center" alt="">
                            </div>
                            <div class="text-center pt-sm-2" style="height: 40%;">
                                @{
                                    string srt = ofertas.IdProductoNavigation.Nombre;
                                    if (srt.Length >= 38)
                                    {
                                        srt = srt.Substring(0, 33) + "...";
                                        <p>@srt</p>
                                    }
                                    else if (srt.Length <= 22)
                                    {
                                        <p>@ofertas.IdProductoNavigation.Nombre</p>
                                        <br />
                                    }
                                    else
                                    {
                                        <p>@ofertas.IdProductoNavigation.Nombre</p>
                                    }
                                }
                                <del class="h6 d-block">RD$ @ofertas.IdProductoNavigation.Precio</del>
                                <p class="h5 text-danger d-block">
                                    @{double precio = Convert.ToDouble(ofertas.IdProductoNavigation.Precio) - ofertas.Precio;}
                                    RD$ @precio
                                </p>
                                <br />
                            </div>
                            <div class="m-auto" style="height: 15%;">
                                <a class="btn btn-outline-oscuro btn-block btn-sm" asp-route-id="@ofertas.IdProductoNavigation.IdProducto" asp-controller="Home" asp-action="Detalle_Producto">Comprar ahora</a>
                            </div>
                        </div>

                    </div>

                }

            </div>

        </div>
    </div>

</div>
